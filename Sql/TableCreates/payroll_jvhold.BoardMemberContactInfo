-- SQL Server Instance: smg-sql01
IF (@@SERVERNAME <> 'smg-dsdev05')
BEGIN
PRINT 'Invalid SQL Server Connection'
RETURN
END

USE [CommitteePayroll];
IF EXISTS(SELECT * FROM INFORMATION_SCHEMA.TABLES WHERE TABLE_NAME = 'BoardMemberContactInfo' AND TABLE_SCHEMA = 'payroll_jvhold')
   DROP TABLE [payroll_jvhold].[BoardMemberContactInfo];
GO
/* -----------------------------------------------------------------------------------------------------------
   Table Name  :  BoardMemberContactInfo
   Business Analyis:
   Project/Process :   
   Description     :  The Contact Info of Board Members assigned to the JV or the Holding board.
                        
   Author          :   Philip Morrison
   Create Date     :   11/10/2025 

   ***********************************************************************************************************
   **         Change History                                                                                **
   ***********************************************************************************************************

   Date       Version    Author             Description
   --------   --------   -----------        ------------
   11/10/2025  1.01.001   Philip Morrison    Created
*/ -----------------------------------------------------------------------------------------------------------                                   

CREATE TABLE [payroll_jvhold].[BoardMemberContactInfo](

    [BoardMemberContactInfoID] [int] IDENTITY ( 1, 1 ) NOT NULL
     ,[FirstName] [varchar] (100) NOT NULL
	 ,[LastName] [varchar] (100) NOT NULL
     ,[Degree] [varchar] (100) NOT NULL
     ,[EmailAddress] [varchar] (300) NOT NULL
 CONSTRAINT [pk_payroll_jvholdBoardMemberContactInfo] PRIMARY KEY CLUSTERED 
(
	[BoardMemberContactInfoID] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON) ON [PRIMARY]
) ON [PRIMARY]
GO


